{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">

    <div class="header">
        <a id = "new"href="/members/create">New Member</a>
        <form action="/members" method="GET">
            <input 
                type="text"
                name="filter"
                placeholder="Name or email"
                value="{{filter}}"
            >
            <button type="submit">Filter</button>
        </form>
    </div>

    <table width="100%">
        <thead>
            <tr>
                <th>Member</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
            <tr>
                <td>
                    <span style="background-image: url('{{member.avatar_url}}')"></span>
                    {{member.name}}
                </td>
                <td>{{member.height}}cm</td>
                <td>{{member.weight}}Kg</td>
                <td>{{member.email}}</td>
                <td><a href="/members/{{member.id}}">Show</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="pagination"
        data-page = "{{pagination.page}}"
        data-total = "{{pagination.total}}"
        data-filter = "{{filter}}"
    ></div>

</div>
{% endblock content %}